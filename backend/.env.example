# Environment Configuration for Question Paper Scrutinization System

# Database Configuration
# Replace with your actual MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database-name>?retryWrites=true&w=majority
MONGO_DB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/qp_scrutinization?retryWrites=true&w=majority

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development
FLASK_PORT=5001

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Optional: Enable debug mode (for development only)
DEBUG=True
